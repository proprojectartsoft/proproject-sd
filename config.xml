<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="io.proproject.sdpreprod" version="1.0.42" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">

    <name>PP Site-Diary</name>

    <description></description>

    <author email="anthony.hanna@proproject.io" href="http://proproject.io/"></author>

    <config-file platform="android" parent="/manifest/application">
        <application android:debuggable="false"/>
    </config-file>

    <!-- <gap:config-file platform="ios" parent="NSPhotoLibraryUsageDescription" overwrite="true">
        <string>We are using the Photo Library for something..</string>
    </gap:config-file> -->

    <content src="index.html"/>

    <config-file platform="android" parent="/manifest">
        <application android:theme="@android:style/Theme.NoTitleBar"></application>
    </config-file>
    <plugin name="cordova-plugin-splashscreen" source="npm"/>
    <plugin name="cordova-plugin-whitelist" source="npm" version="1.0.0"/>
    <plugin name="cordova-plugin-imagepicker" source="npm"/>
    <plugin name="cordova-plugin-file" source="npm" version="4.3.0" />
    <plugin name="cordova-plugin-file-transfer" source="npm" version="1.5.0" />
    <plugin name="cordova-plugin-camera" source="npm" version="2.4.1">
      <param name="CAMERA_USAGE_DESCRIPTION" value="We are using the Camera for something..." />
      <param name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="We are using the Photo Library for something..." />
    </plugin>
    <plugin name="cordova-plugin-contacts" source="npm" version="2.3.1" />
    <plugin name="cordova-sqlite-storage" spec="~0.8.5"/>
    <plugin name="cordova-plugin-network-information"/>
    <plugin name="cordova-plugin-inappbrowser" source="npm"/>
    <plugin name="cordova-plugin-keyboard"/>

    <access origin="*"/>
    <allow-navigation href="http://*/*"/>
    <allow-navigation href="https://*/*"/>
    <allow-navigation href="data:*"/>

    <preference name="phonegap-version" value="cli-7.0.1"/>
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="4000"/>
    <preference name="webviewbounce" value="false"/>
    <preference name="UIWebViewBounce" value="false"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="android-minSdkVersion" value="16"/>
    <preference name="BackupWebStorage" value="none"/>
    <preference name="orientation" value="portrait"/>
    <preference name="fullscreen" value="false"/>

    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar"/>
    </feature>
    <platform name="android">
        <preference name="android-minSdkVersion" value="14"/>
        <preference name="android-targetSdkVersion" value="14"/>
    </platform>

    <icon src="img/icons/android/drawable-ldpi/ic_launcher.png" gap:platform="android" gap:qualifier="ldpi"/>
    <icon src="img/icons/android/drawable-madpi/ic_launcher.png" gap:platform="android" gap:qualifier="mdpi"/>
    <icon src="img/icons/android/drawable-hdpi/ic_launcher.png" gap:platform="android" gap:qualifier="hdpi"/>
    <icon src="img/icons/android/drawable-xhdpi/ic_launcher.png" gap:platform="android" gap:qualifier="xhdpi"/>
    <icon src="img/icons/android/drawable-xxhdpi/ic_launcher.png" gap:platform="android" gap:qualifier="xxhdpi"/>
    <icon src="img/icons/android/playstore-icon.png" gap:platform="android" gap:qualifier="fr-xxhdpi"/>

    <splash src="splash.png" gap:platform="android" gap:qualifier="port-ldpi"/>
    <splash src="splash.png" gap:platform="android" gap:qualifier="port-mdpi"/>
    <splash src="splash.png" gap:platform="android" gap:qualifier="port-hdpi"/>
    <splash src="splash.png" gap:platform="android" gap:qualifier="port-xhdpi"/>
    <splash src="splash.png"/>

    <icon src="img/icons/ios7/Icon-60.png" gap:platform="ios" width="60" height="60"/>
    <icon src="img/icons/ios7/Icon-60@2x.png" gap:platform="ios" width="120" height="120"/>
    <icon src="img/icons/ios7/Icon-76.png" gap:platform="ios" width="76" height="76"/>
    <icon src="img/icons/ios7/Icon-76@2x.png" gap:platform="ios" width="152" height="152"/>
    <icon src="img/icons/ios7/Icon-Small.png" gap:platform="ios" width="29" height="29"/>
    <icon src="img/icons/ios7/Icon-Small@2x.png" gap:platform="ios" width="58" height="58"/>
    <icon src="img/icons/ios7/Icon-40.png" gap:platform="ios" width="40" height="40"/>
    <icon src="img/icons/ios7/Icon-40@2x.png" gap:platform="ios" width="80" height="80"/>

    <icon src="img/icons/ios/Icon.png" gap:platform="ios" width="57" height="57"/>
    <icon src="img/icons/ios/Icon@2x.png" gap:platform="ios" width="114" height="114"/>
    <icon src="img/icons/ios/Icon-72.png" gap:platform="ios" width="72" height="72"/>
    <icon src="img/icons/ios/Icon-72@2x.png" gap:platform="ios" width="144" height="144"/>
    <icon src="img/icons/ios/Icon-Small.png" gap:platform="ios" width="29" height="29"/>
    <icon src="img/icons/ios/Icon-Small@2x.png" gap:platform="ios" width="58" height="58"/>
    <icon src="img/icons/ios/Icon-Small-50.png" gap:platform="ios" width="50" height="50"/>
    <icon src="img/icons/ios/Icon-Small-50@2x.png" gap:platform="ios" width="100" height="100"/>

    <splash src="img/splash/Default.png" gap:platform="ios" width="320" height="480"/>
    <splash src="img/splash/Default@2x.png" gap:platform="ios" width="640" height="960"/>
    <splash src="img/splash/Default-568h@2x.png" gap:platform="ios" width="640" height="1136"/>
    <splash src="img/splash/Default-Portrait.png" gap:platform="ios" width="768" height="1024"/>
    <splash src="img/splash/Default-Landscape.png" gap:platform="ios" width="1024" height="768"/>
    <splash src="img/splash/Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048"/>
    <splash src="img/splash/Default-Landscape@2x.png" gap:platform="ios" width="2048" height="1536"/>

    <platform name="ios"/>
    <platform name="android"/>
</widget>
